
<% if notice %>
<p id="notice"><%= notice %></p> 
<% end %>
 

<%="Man, you have visited this page " + pluralize(session[:counter],"time") + " without adding a book in your cart!" if session[:counter]>5 %>  


<h1>Your Pragmatic Catalog</h1> 

<% @products.each do |product| %>
  <div class="entry"> 
    <%= link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post%>
    <%= sanitize(product.description) %>
    <div class="price_line"> 
      <span class="price" ><%= number_to_currency(product.price) %></span>
      <%= button_to 'Add to Cart', line_items_path(:product_id => product) %>
    </div> 
    <% if product.popularity > 0 %>
    <p>This book has been put in shoppers' shopping cart for <b><%= pluralize(product.popularity, "time") %></b> </p>
    <% end %>  
  </div> 
<% end %>